@model TaskDotNet.Web.ViewModels.Companies.DeleteCompanyViewModel

@{
    ViewData["Title"] = "Delete Company";
}

<h2 style="color: darkgray">Are you sure you want to delete this company?</h2>
<hr />
<div class="content" style="min-height: 500px;">
    <div>
        <div class="tab-content">
            <div class="tab-pane active">
                <ul class="media-list">
                    <li class="media">
                        <div class="media-body">
                            <div class="well well-lg">
                                @{
                                    var data = new Dictionary<string, string>
                                                                                            {
                                            {"Username", Model.Name }
                                        };
                                }
                                <h4 class="media-heading reviews">
                                    <img class="mr-3" width="100" src="@Model.ImageUrl" alt="image" />  
                                    <span class="nav-link text-dark" style="display:contents">@Model.Name</span>
                                </h4>
                                <ul class="media-date text-uppercase reviews list-inline">
                                    <li>Created on: @Model.CreatedOn</li>
                                </ul>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        <form role="form" method="post" asp-controller="Companies" asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Delete" />
                <button type="button" class="btn btn-primary" onclick="history.back()">Back</button>
            </div>
        </form>
    </div>
</div>

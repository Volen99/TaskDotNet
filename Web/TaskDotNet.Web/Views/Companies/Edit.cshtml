@model TaskDotNet.Web.ViewModels.Companies.EditCompanyInputModel

@{
    ViewData["Title"] = "Edit Company";
}

<h2 style="color: darkgray">Edit Company</h2>
<hr />
<div class="content" style="min-height: 500px">
    <div class="row" style="margin-right: 0px">
        <div class="col-md-4">
            <form role="form" method="post" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Name" class="control-label"></label>
                    <input asp-for="@Model.Name" class="edit-comment-name form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="@Model.ImageUrl"></label>
                    <input class="form-control" asp-for="@Model.ImageUrl">
                    <span class="text-danger" asp-validation-for="@Model.ImageUrl"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Save" />
                    <button type="button" class="btn btn-primary" onclick="history.back()">Back to Company</button>
                </div>
                <input type="hidden" asp-for="CompanyId" />
            </form>
        </div>
    </div>
</div>

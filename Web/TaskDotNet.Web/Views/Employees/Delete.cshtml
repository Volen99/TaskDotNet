@model TaskDotNet.Web.ViewModels.Employees.EmployeeDeleteInputModel

@{
    ViewData["Title"] = "Delete Employee";
}

<h2 style="color: darkgray">Are you sure you want to delete this Employee?</h2>
<hr />
<div class="content" style="min-height: 500px;">
    <div>
        <div class="tab-content">
            <div class="tab-pane active">
                <ul class="media-list">
                    <li class="media">
                        <div class="media-body">
                            <div class="well well-lg">
                                <h4 class="media-heading reviews">
                                    <span class="nav-link text-dark">Employees Name: @(Model.FirstName + " " + Model.LastName)</span>
                                </h4>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div>
        <form role="form" method="post" asp-controller="Employees" asp-action="Delete">
            <input type="hidden" asp-for="CompanyId" />
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Delete" />
                <button type="button" class="btn btn-primary" onclick="history.back()">Back</button>
            </div>
        </form>
    </div>
</div>
